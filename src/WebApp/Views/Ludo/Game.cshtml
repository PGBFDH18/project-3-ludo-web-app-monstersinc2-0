                <div class="field">69</div>
                <div class="field">70</div>
                <div class="field">71</div>
                <div class="field">72</div>
            *@
        </div>


        <div class="goal" id="goal"></div>

        <div class="start player1" id="0">
            @foreach (var p in p1Piecepositions)
            {
                if (p == 0)
                {
                    <div class="field">
                        <div class="brick player1"></div>
                    </div>
                }
            }
        </div>
        <div class="start player2" id="b2">
            @foreach (var p in p2Piecepositions)
            {
                if (p == 0)
                {
                    <div class="field">
                        <div class="brick player2"></div>
                    </div>
                }
            }
        </div>
        <div class="start player3" id="b3">
            @foreach (var p in p3Piecepositions)
            {
                if (p == 0)
                {
                    <div class="field">
                        <div class="brick player3"></div>
