
@{
    ViewData["Title"] = "Play Ludo";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Play Ludo</h1>
<p>Enter the nickname of all players. Leave empty if you are not four players.</p>
<p>At least two players are required for a game of Ludo.</p>

<div class="w-25">
    <form method="post">
        <div class="form-group">
            <label class="col-form-label" for="Player1">Player 1</label>
            <input type="text" class="form-control" placeholder="Enter nickname" id="Player1" name="Player1">

            <label class="col-form-label" for="Player2">Player 2</label>
            <input type="text" class="form-control" placeholder="Enter nickname" id="Player2" name="Player2">

            <label class="col-form-label" for="Player3">Player 3</label>
            <input type="text" class="form-control" placeholder="Enter nickname" id="Player3" name="Player3">

            <label class="col-form-label" for="Player4">Player 4</label>
            <input type="text" class="form-control" placeholder="Enter nickname" id="Player4" name="Player4">

            <button type="submit" class="btn btn-outline-primary" asp-controller="Ludo" asp-action="OnPost">Start game</button>
        </div>
    </form>
</div>