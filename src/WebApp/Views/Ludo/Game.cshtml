        </div>
        <div class="start player4" id="b4">
            @foreach (var p in p4Piecepositions)
            {
                if (p == 0)
                {
                    <div class="field">
                        <div class="brick player4"></div>
                    </div>
                }
            }
        </div>
    </div>
</body>

</html>
