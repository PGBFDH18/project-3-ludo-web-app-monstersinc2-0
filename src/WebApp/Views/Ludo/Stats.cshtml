@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = localizer["Stats"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Winner>

<h1>@localizer["Stats"]</h1>

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">@localizer["Rank"]</th>
            <th scope="col">@localizer["Username"]</th>
            <th scope="col">@localizer["Games won"]</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            int rank = 1;

            foreach (var p in Model)
            {
                <tr class="table-light">
                    <th scope="row">@rank</th>
                    <td>@p.Name</td>
                    <td>@p.GamesWon</td>
                </tr>
                rank++;
            }
        }
        else
        {
            <tr class="table-light">
                <th scope="row">0</th>
                <td>@localizer["nowinner"]</td>
                <td>0</td>
            </tr>
        }
    </tbody>
</table>