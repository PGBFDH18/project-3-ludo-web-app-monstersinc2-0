@{ int[] p1Piecepositions = new int[] { 0, 0, 0, 0 }; }
@{ int[] p2Piecepositions = new int[] { 0, 0, 0, 0 }; }
@{ int[] p3Piecepositions = new int[] { 0, 0, 0, 0 }; }
@{ int[] p4Piecepositions = new int[] { 0, 0, 0, 0 }; }

@{ int[] p1Pattern = new int[] { 0, 55, 56, 57, 58, 59, 60, 18, 17, 16,
15, 14, 13, 7, 1, 2, 3, 4, 5, 6, 54, 53, 52, 51, 50, 49, 43, 37,
38, 39, 40, 41, 42, 36, 35, 34, 33, 32, 31, 25, 19, 20, 21, 22,
23, 24, 72, 71, 70, 69, 68, 67, 61, 62, 63, 64, 65, 66};}

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Game</title>
    <link href="~/css/LudoStyle.css" rel="stylesheet" />
    <link href="~/css/reset.css" rel="stylesheet" />
</head>

<body>
    <div class="gameInfo">
        <div class="currentPlayer">player1</div>
        <div class="dice">
            <div class="diceDot" id="center"></div>
            <div class="diceDot" id="leftUpper"></div>
            <div class="diceDot" id="leftMiddel"></div>
            <div class="diceDot" id="leftLower"></div>
            <div class="diceDot" id="rightUpper"></div>
            <div class="diceDot" id="rightMiddel"></div>
            <div class="diceDot" id="rightLower"></div>
        </div>
    </div>
    <div class="board">
        <div class="wing" id="leftWing">
            <div class="field">1</div>
            <div class="field player2">2</div>
            <div class="field">3</div>
            <div class="field">4</div>
            <div class="field">5</div>
            <div class="field">6</div>
            <div class="field">7</div>
            <div class="field player2">8</div>
            <div class="field player2">9</div>
            <div class="field player2">10</div>
            <div class="field player2">11</div>
            <div class="field player2">12</div>
            <div class="field">13</div>
            <div class="field">14</div>
            <div class="field">15</div>
            <div class="field">16</div>
            <div class="field">17</div>
            <div class="field">18</div>
        </div>
        <div class="wing" id="rightWing">
            <div class="field">19</div>
            <div class="field player3">20</div>
            <div class="field">21</div>
            <div class="field">22</div>
            <div class="field">23</div>
            <div class="field">24</div>
            <div class="field">25</div>
            <div class="field player3">26</div>
            <div class="field player3">27</div>
            <div class="field player3">28</div>
            <div class="field player3">29</div>
            <div class="field player3">30</div>
            <div class="field">31</div>
            <div class="field">32</div>
            <div class="field">33</div>
            <div class="field">34</div>
            <div class="field">35</div>
            <div class="field">36</div>
        </div>
        <div class="wing" id="topWing">
            <div class="field">37</div>
            <div class="field player4">38</div>
            <div class="field">39</div>
            <div class="field">40</div>
            <div class="field">41</div>
            <div class="field">42</div>
            <div class="field">43</div>
            <div class="field player4">44</div>
            <div class="field player4">45</div>
            <div class="field player4">46</div>
            <div class="field player4">47</div>
            <div class="field player4">48</div>
            <div class="field">49</div>
            <div class="field">50</div>
            <div class="field">51</div>
            <div class="field">52</div>
            <div class="field">53</div>
            <div class="field">54</div>
        </div>
        <div class="wing" id="bottomWing">
            @*This for-loop replaces the code below.*@
            @for (int i = 55; i <= 72; i++)
            {
                bool painted = false;

                foreach (var p in p1Piecepositions)
                {
                    if (p1Pattern[p] == i)
                    {
                        <div class="field">
                            <div class="brick player1"></div>
                        </div>
                        painted = true;
                        break;
                    }
                    else if (i == 56 || i >= 62 && i <= 66)
                    {
                        <div class="field player1">@i</div>
                        painted = true;
                        break;
                    }
                }

                @if (painted == false)
                {
                    <div class="field">@i</div>
                }
            }

            @*
                <div class="field">55</div>
                <div class="field player1">56</div>
                <div class="field">57</div>
                <div class="field">58</div>
                <div class="field">59</div>
